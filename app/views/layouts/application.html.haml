!!!
%html{:lang => "de"}
  %head
    %meta{:charset => 'utf-8'}
    %title
      = t('.title')
    = stylesheet_link_tag "application"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    - if flash[:notice]
      %p.notice
        = flash[:notice]
    - if flash[:error]
      %p.error
        = flash[:error]
        
    %article
      = yield
